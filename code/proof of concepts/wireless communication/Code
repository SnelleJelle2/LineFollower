#include <SoftwareSerial.h>

SoftwareSerial BT(2, 3);  // RX, TX
int LED = 13;
char state = 'x';         // default

void setup() {
  pinMode(LED, OUTPUT);
  Serial.begin(9600);     // USB debug
  BT.begin(9600);         // HC-05 standaard
  Serial.println("HC-05 test klaar. Stuur '1' of '0'.");
}

void loop() {
  if (BT.available()) {
    state = BT.read();
    Serial.print("Ontvangen: ");
    Serial.println(state);
  }

  if (state == '1') {
    digitalWrite(LED, HIGH);
    BT.println("Led aan");
  } else if (state == '0') {
    digitalWrite(LED, LOW);
    BT.println("Led uit");
  }
}
